{
    "name": "dani/datata-blog",
    "authors": [
        {
            "name": "datata",
            "email": "danitt15@gmail.com"
        }
    ],
    "require": {
        "twig/twig": "^2.11",
        "kint-php/kint": "^3.2",
        "monolog/monolog": "^1.24",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^6.0",
        "robmorgan/phinx": "^0.10.7",
        "fzaninotto/faker": "^1.8",
        "doctrine/orm": "^2.6",
        "phpunit/phpunit": "^8.2",
        "phpunit/php-invoker": "^2.0"
    },
    "autoload":{
        "psr-4":{
            "App\\":"src/"}
        },

    "autoload-dev":{
        "psr-4":{
            "AppTest\\":"test/"
        }
    },

    "scripts":
        {
            "start": "@composer delete-cache && php -S localhost:5002 -t=public",
            "kill": "(lsof -n -i4TCP:5002 | grep LISTEN | awk '{ print $2 }' | xargs kill) && rm -R cache",
            "delete-cache": "if [ -d 'cache/views' ]; then rm -R cache/views; fi",
            "phpunit":"phpunit --configuration phpunit.xml",
            "test":[
            "phpunit --configuration phpunit.xml"
            ]
        },

    "config":
        {
            "process-timeout": 0
        },
    
    "require-dev": {
        "phpunit/phpunit": "^8.2"
    }
    
    
}
